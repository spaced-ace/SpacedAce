package components

type ButtonColor int

const (
    ButtonColorBlack = iota
    ButtonColorWhite = 1
)

templ LinkButton(text, url string, color ButtonColor) {
    <a
        if color == ButtonColorBlack {
            class="h-min rounded-md bg-black px-4 py-2 text-center text-base font-semibold text-white text-nowrap hover:bg-black/90"
        }
        else {
            class="h-min rounded-md border border-gray-300 bg-white px-4 py-2 text-center text-base font-semibold text-black text-nowrap hover:bg-gray-100"
        }
        href={templ.SafeURL(url)}
    >{text}</a>
}

type ButtonProps struct {
    Text       string
    Type       string
    HxGet      string
    HxPost     string
    HxPut      string
    HxPatch    string
    HxDelete   string
    Color      ButtonColor
    Attributes templ.Attributes
}

templ Button(props ButtonProps) {
    <button
        type={props.Type}
        if props.HxGet != "" { hx-get={props.HxGet}}
        if props.HxPost != "" { hx-post={props.HxPost}}
        if props.HxPut != "" { hx-put={props.HxPut}}
        if props.HxPatch != "" { hx-patch={props.HxPatch}}
        if props.HxDelete != "" { hx-delete={props.HxDelete}}
        if props.Color == ButtonColorBlack {
            class="h-min rounded-md bg-black px-4 py-2 text-center text-base font-semibold text-white text-nowrap hover:bg-black/90"
        }
        else {
            class="h-min rounded-md border border-gray-300 bg-white px-4 py-2 text-center text-base font-semibold text-black text-nowrap hover:bg-gray-100"
        }
        {props.Attributes...}
        >
        {props.Text}
    </button>
}